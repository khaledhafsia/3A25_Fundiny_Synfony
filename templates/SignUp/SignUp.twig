{% block stylesheet %}
    <link rel="stylesheet" href="{{ asset('signup/css/signup.css') }}" media="screen">

{% endblock %}
{% block body %}


    <section class="vh-100 gradient-custom">
        <div class='bold-line'></div>
        <div class='container'>
            <div class='window'>
                <div class='overlay'></div>
                <div class='content'>
                    <div class='welcome'>Hello There!</div>
                    <div class='subtitle'>We're almost done. Before using our services you need to create an account.</div>
                    <img src="{{ asset('/back/img/logo_projet.png') }}"   >
                    {% for flashMessage in app.flashes('error') %}
                        <div class="alert alert-danger" role="alert">
                            {{ flashMessage }}
                        </div>
                    {% endfor %}


                            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        {{ form_widget(form.nom, {'attr': {'class': 'form-control form-control-lg', 'id': 'firstName'}}) }}
                                        <label class="form-label" for="firstName">First Name</label>
                                        {{ form_errors(form.nom) }}
                                    </div>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        {{ form_widget(form.prenom, {'attr': {'class': 'form-control form-control-lg', 'id': 'lastName'}}) }}
                                        <label class="form-label" for="lastName">Last Name</label>
                                        {{ form_errors(form.prenom) }}
                                    </div>
                                </div>
                            </div>



                            <div class="row">
                                <div class="col-md-6 mb-4 pb-2">
                                    <div class="form-outline">
                                        {{ form_widget(form.email, {'attr': {'class': 'form-control form-control-lg', 'id': 'emailAddress'}}) }}
                                        <label class="form-label" for="emailAddress">Email</label>
                                        {{ form_errors(form.email) }}
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-4 pb-2">
                                    <div class="form-outline">
                                        {{ form_widget(form.password, {'attr': {'class': 'form-control form-control-lg', 'id': 'emailAddress'}}) }}
                                        <label class="form-label" for="emailAddress">Password</label>
                                        {{ form_errors(form.password) }}
                                    </div>
                                </div>
                            </div>

                            {{ form_end(form) }}
                    <div class="d-flex align-items-center justify-content-center pb-4">

                        <a  href="{{ path('login') }}"><button style="border-radius:15px;color:blue;border-color:blue;"  >Already have  an account ?</button></a>

                    </div>
                        </div>
                    </div>
                </div>

    </section>

{% endblock %}
