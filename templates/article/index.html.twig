{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
    <h1>Article index</h1>

    <table class="table">
       
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.description }}</td>
                <td>
                    {% if article.image %}
                        <img src="{{ asset('images/front/' ~ article.image) }}" alt="" style="max-width: 100px;">
                    {% else %}
                        No image
                    {% endif %}
                </td>
                <td>
                    {# <a href="{{ path('app_article_show', {'id': article.id}) }}">Show</a> #}
                    <a href="{{ path('app_article_edit', {'id': article.id}) }}">Edit</a>
                    <form action="{{ path('app_article_delete', {'id': article.id}) }}" method="post" onsubmit="return confirm('Are you sure you want to delete this item?');">
                        <input type="hidden" name="_method" value="DELETE">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.id) }}">
                        <input type="hidden" name="id" value="{{ article.id }}">  {# Add this line to make the ID hidden #}
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">No records found</td>  {# Adjust colspan based on the number of columns #}
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_article_new') }}" class="btn btn-primary">Create new</a>
{% endblock %}
