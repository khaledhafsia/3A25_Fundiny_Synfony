{% extends 'baseBack.html.twig' %}

{% block title %}Taches index{% endblock %}

{% block body %}
               <!-- Section Title -->
               <br><br>
      <div class="container section-title" data-aos="fade-up">
        <span class="">Your Invesment's Tasks List<br></span>
        <h2 class="">Your Invesment's Tasks List<br></h2>
        <p>a list of the selected invesment tasks </p>
      </div><!-- End Section Title -->

    <form id="sortForm">
        <label>
            Sort by Priority:
            <input class="form-check-input" type="radio" name="sort" value="priority" id="sortPriority">
        </label>
        <label>
            Sort by Status:
            <input class="form-check-input" type="radio" name="sort" value="status" id="sortStatus">
        </label>
    </form><br>
    <input class="form-control" type="text" id="searchInputTaches" placeholder="Search by titre...">
    <br><br>
<div id="tachesTableContainer">
    <table class="table table-hover" id="tachesTable">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Priorite</th>
                <th>Statut</th>
                <th>Echeanced</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tach in taches %}
            <tr>
                <td>{{ tach.titre }}</td>
                <td>{{ tach.priorite }}</td>
                <td>{{ tach.statut }}</td>
                <td>{{ tach.echeanced ? tach.echeanced|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_tachesBack_show', {'id': tach.id}) }}">show</a>
                    <a href="{{ path('app_tachesBack_edit', {'id': tach.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>

    <a href="{{ path('app_investissementsBack_index') }}">back to invesments list</a>
    <br><br><br><br>
   <script>
        document.addEventListener('DOMContentLoaded', function () {
            const sortForm = document.getElementById('sortForm');
            const tachesTable = document.getElementById('tachesTable');
            const investissementId = {{ investissement.id }}; // Assuming investissement is passed to this template

            sortForm.addEventListener('change', function (event) {
                const formData = new FormData(sortForm);
                fetch('{{ path('app_taches_sort', {'id': 'INVESTISSEMENT_ID'}) }}'.replace('INVESTISSEMENT_ID', investissementId), {
                    method: 'POST',
                    body: formData
                })
                .then(response => response.text())
                .then(html => {
                    tachesTable.innerHTML = html;
                })
                .catch(error => console.error('Error:', error));
            });
        });

    </script>

    <script>
    document.getElementById('searchInputTaches').addEventListener('input', function() {
        var searchValue = this.value.toLowerCase();
        var rows = document.querySelectorAll('#tachesTable tbody tr');

        rows.forEach(function(row) {
            var titre = row.querySelector('td:first-child').textContent.toLowerCase();
            if (titre.includes(searchValue)) {
                row.style.display = '';
            } else {
                row.style.display = 'none';
            }
        });
    });
</script>

{% endblock %}
