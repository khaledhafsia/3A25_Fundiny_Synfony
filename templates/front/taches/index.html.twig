{% extends 'base.html.twig' %}

{% block title %}Taches index{% endblock %}

{% block body %}
    <h1>Taches index</h1>

    <form id="sortForm">
        <label>
            Sort by Priority:
            <input type="radio" name="sort" value="priority" id="sortPriority">
        </label>
        <label>
            Sort by Status:
            <input type="radio" name="sort" value="status" id="sortStatus">
        </label>
    </form>

    <table class="table" id="tachesTable">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Priorite</th>
                <th>Statut</th>
                <th>Echeanced</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tach in taches %}
            <tr>
                <td>{{ tach.id }}</td>
                <td>{{ tach.titre }}</td>
                <td>{{ tach.priorite }}</td>
                <td>{{ tach.statut }}</td>
                <td>{{ tach.echeanced ? tach.echeanced|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_taches_show', {'id': tach.id}) }}">show</a>
                    <a href="{{ path('app_taches_edit', {'id': tach.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_investissements_index') }}">back to invesments list</a>
   <script>
        document.addEventListener('DOMContentLoaded', function () {
            const sortForm = document.getElementById('sortForm');
            const tachesTable = document.getElementById('tachesTable');
            const investissementId = {{ investissement.id }}; // Assuming investissement is passed to this template

            sortForm.addEventListener('change', function (event) {
                const formData = new FormData(sortForm);
                fetch('{{ path('app_taches_sort', {'id': 'INVESTISSEMENT_ID'}) }}'.replace('INVESTISSEMENT_ID', investissementId), {
                    method: 'POST',
                    body: formData
                })
                .then(response => response.text())
                .then(html => {
                    tachesTable.innerHTML = html;
                })
                .catch(error => console.error('Error:', error));
            });
        });
    </script>

{% endblock %}
