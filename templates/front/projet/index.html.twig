{% extends 'base.html.twig' %}

{% block title %}Projet index{% endblock %}

{% block body %}
    <h1>Projet index</h1>

    <table class="table">
        <thead>
            <tr>
                <!--<th>Id</th>-->
                <th>Nompr</th>
                <th>Nompo</th>
                <th>Dated</th>
                <th>Ca</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for projet in projets %}
            <tr>
                <!--<td>{{ projet.id }}</td>-->
                <td>{{ projet.nompr }}</td>
                <td>{{ projet.nompo }}</td>
                <td>{{ projet.dated ? projet.dated|date('Y-m-d') : '' }}</td>
                <td>{{ projet.ca }}</td>
                <td>
                    <a href="{{ path('app_projet_show', {'id': projet.id}) }}">show</a>
                    <a href="{{ path('app_projet_edit', {'id': projet.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_projet_new') }}">Create new</a>
{% endblock %}
